@model InquiryManagementApp.Models.Enrollment

<div class="container py-3" style="margin-top: 200px;">
    <h2>Enrollment Details</h2>

    <div class="row mb-3">
        <div class="col-md-4">
            <label for="enrollmentId"><strong>Enrollment ID</strong></label>
            <p id="enrollmentId">@Model.EnrollmentId</p>
        </div>
        <div class="col-md-4">
            <label for="studentName"><strong>Student Name</strong></label>
            <p id="studentName">@Model.Surname, @Model.Firstname</p>
        </div>
        <div class="col-md-4">
            <label for="gradeLevel"><strong>Grade Level</strong></label>
            <p id="gradeLevel">@Model.GradeLevel</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label for="dateOfBirth"><strong>Date of Birth</strong></label>
            <p id="dateOfBirth">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
        </div>
        <div class="col-md-4">
            <label for="lrn"><strong>LRN</strong></label>
            <p id="lrn">@Model.LRN</p>
        </div>
        <div class="col-md-4">
            <label for="submissionDate"><strong>Submission Date</strong></label>
            <p id="submissionDate">@Model.SubmissionDate.ToString("MMMM dd, yyyy")</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label for="status"><strong>Status</strong></label>
            <p id="status">@(Model.IsApproved ? "Approved" : "Pending")</p>
        </div>
    </div>

    <div class="form-group">
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to List</a>
    </div>
</div>
