    <style>
        @* * {
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif !important;
        } *@

        * {
            user-select: none !important;
        }

        body {
            font-family: 'Arial', sans-serif;
            @* background-color: #F4F6F9; *@
        @* background: linear-gradient(to right, yellow, blue, blue) !important; *@
        }

        .navbar {
            background-color: #006BFF;
        }

        .navbar a {
            color: #FFFFFF !important;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.6rem;
        }

        .navbar-nav .nav-link {
            font-size: 1rem;
        }

        .hero-section {
            margin-top: 50px;
            @* background-image: url('src/background.jpg'); *@
            background-size: cover;
            background-position: center;
            color: #FFFFFF;
            padding: 80px 0;
            min-height: 80vh;
            position: relative;

            box-shadow: inset 0 -200px 150px rgba(0, 0, 0, 0.4);
        }


        .hero-section h2 {
            font-size: 3rem;
            font-weight: bold;
        }

        .hero-section p {
            font-size: 1.25rem;
            max-width: 700px;
            margin: 0 auto;
        }

        .cta-buttons .btn {
            font-size: 1.2rem;
            padding: 12px 30px;
            margin: 10px;
            border-radius: 30px;
        }

        .cta-buttons .btn-primary {
            background-color: #006BFF;
            border-color: #006BFF;
        }

        .cta-buttons .btn-primary:hover {
            background-color: #08C2FF;
            border-color: #08C2FF;
        }

        .cta-buttons .btn-secondary {
            background-color: #FFF100;
            border-color: #FFF100;
            color: #006BFF;
        }

        .cta-buttons .btn-secondary:hover {
            background-color: #08C2FF;
            border-color: #08C2FF;
            color: #FFFFFF;
        }

        .btn-primary:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            transform: translateY(-3px);
            transition: all 0.2s ease-in-out;
        }

        .programs {
            background-color: #F9F9F9;
            padding: 50px 0;
        }

        .programs h3 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .programs .list-group-item {
            font-size: 1.1rem;
            border: none;
            padding: 10px 15px;
            background-color: #FFFFFF;
        }

        .programs .list-group-item:hover {
            background-color: #F1F1F1;
        }

        .card-deck .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            color: #006BFF;
        }

        .card-body p {
            color: #555555;
        }

        .card-footer {
            text-align: center;
            background-color: #F9F9F9;
        }

        footer {
            background-color: #006BFF;
            color: #FFF100;
            padding: 20px 0;
        }

        footer p {
            font-size: 1rem;
            margin-bottom: 0;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">



<header class="navbar navbar-expand-lg fixed-top" style="background-color: #105FE9FF; color: white;">
    <div class="container">
        <a class="navbar-brand fw-bold text-white" href="@Url.Action("Index", "Home")">
            <img src="~/src/logo.png" alt="Logo"
                style="border-radius: 50%; width: 40px; height: 40px; margin-right: 10px;">
            DE ROMAN MONTESSORI SCHOOL
        </a>
        <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
