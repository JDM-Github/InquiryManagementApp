@model InquiryManagementApp.Models.Inquiry

<div class="container mt-4">
    <h4>Student Inquiry Details</h4>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="mb-3">
        <label class="form-label fw-bold">Student Name:</label>
        <span>@Model.StudentName</span>
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Guardian Name:</label>
        <span>@Model.GuardianName</span>
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Contact Number:</label>
        <span>@Model.ContactNumber</span>
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Email Address:</label>
        <span>@Model.EmailAddress</span>
    </div>

    <form id="updateReasonForm" method="post" asp-action="UpdateReason" asp-controller="Inquiry">
        <div class="mb-3">
            <label class="form-label fw-bold">Reason for Not Proceeding:</label>
            <textarea id="notProceedingReason" name="reason" class="form-control" rows="3">@Model.Reason</textarea>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save Reason</button>
        </div>

        <input type="hidden" name="inquiryId" value="@Model.InquiryId" />
    </form>
</div>

<a class="btn btn-secondary" asp-controller="Admin" asp-action="Index">Back to List</a>
