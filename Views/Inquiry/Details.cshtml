@model InquiryManagementApp.Models.Inquiry

<h2>Inquiry Details</h2>
<div>
    <h4>Inquiry</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Student Name</dt>
        <dd class="col-sm-10">@Model.StudentName</dd>

        <dt class="col-sm-2">Guardian Name</dt>
        <dd class="col-sm-10">@Model.GuardianName</dd>

        <dt class="col-sm-2">Contact Number</dt>
        <dd class="col-sm-10">@Model.ContactNumber</dd>

        <dt class="col-sm-2">Email Address</dt>
        <dd class="col-sm-10">@Model.EmailAddress</dd>

        <dt class="col-sm-2">Source of Information</dt>
        <dd class="col-sm-10">@Model.SourceOfInformation</dd>

        <dt class="col-sm-2">Notes</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
    </dl>
</div>
