@model InquiryManagementApp.Models.Inquiry

<h2>Delete Inquiry</h2>
<h3>Are you sure you want to delete this inquiry?</h3>
<div>
    <h4>Inquiry</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Student Name</dt>
        <dd class="col-sm-10">@Model.StudentName</dd>

        <dt class="col-sm-2">Guardian Name</dt>
        <dd class="col-sm-10">@Model.GuardianName</dd>

        <dt class="col-sm-2">Contact Number</dt>
        <dd class="col-sm-10">@Model.ContactNumber</dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="InquiryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
