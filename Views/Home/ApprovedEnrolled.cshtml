@model StudentViewModel

<div class="container my-5 py-5 min-vh-100">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3><strong>STUDENT INFORMATION</strong></h3>
                </div>
                <div class="card-body">
                    <form asp-action="PayEnrollment" method="post">
                        <div>
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-12">
                                        <p><strong>Student ID:</strong> @Model.StudentID</p>
                                        <p><strong>First Name:</strong> @Model.FirstName</p>
                                        <p><strong>Middle Name:</strong> @Model.MiddleName</p>
                                        <p><strong>Surname:</strong> @Model.Surname</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <p><strong>Grade Level:</strong> @Model.GradeLevel</p>
                                        <p><strong>Birthday:</strong> @Model.Birthday.ToString("MMMM dd, yyyy")</p>
                                        <p><strong>Email:</strong> @Model.Email</p>
                                        <p><strong>Address:</strong> @Model.Address</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" name="studentId" value="@Model.EnrollmentId" />

                        <div class="payment-info mt-4">
                            <p><strong>Payment Type:</strong> @Model.PaymentType</p>
                            <p><strong>Values To Pay:</strong> <span class="text-success">@Model.TotalToPay.ToString("C")</span></p>
                            <div class="form-group">
                                <label for="amount" class="form-label">Amount to Pay</label>
                                <input type="number" id="amount" name="amount" class="form-control w-100"
                                    value="@Model.TotalToPay" />
                            </div>
                        </div>

                        <div class="d-flex justify-content-center mt-5">
                            <button type="submit" class="btn btn-lg btn-primary px-5 py-3">Proceed To Payment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>