@model InquiryView

@{
    ViewData["Title"] = "Enrolled Students";
}


<div class="container-fluid mt-4 d-flex gap-3"
    style="margin-top: 65px !important; margin-bottom: 10px; min-height: 90vh;">
    @await Html.PartialAsync("Layout/Navigation")

    <div class="card shadow-lg border-0 rounded-3 mt-2 w-100">
        <div class="card-header d-flex align-items-center justify-content-between"
            style="border-left: 4px solid #FFD700; background-color: #f8f9fa;">
            <h2 class="mb-0" style="font-size: 1.5rem; font-weight: bold; color: #007bff; padding-left: 15px;">
                MANAGE INQUIRIES</h2>
            <div class="d-flex gap-2 w-50">
                <select class="form-control" id="status-filter" asp-for="StatusFilter" onchange="applyFilters()">
                    <option value="">Select Status</option>
                    <option value="Pending">Pending</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                </select>

                <select class="form-control" id="rstatus-filter" asp-for="RStatusFilter" onchange="applyFilters()">
                    <option value="">Select R. Status</option>
                    <option value="Pending">Pending</option>
                    <option value="Confirmed">Confirmed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>

        </div>

        <div class="card-body">
            <div class="d-flex gap-2">
                <input type="text" asp-for="SearchFilter" class="form-control w-100 mb-2 shadow-sm"
                    placeholder="Search..." id="searchInput" style="border-radius: 5px; font-size: 0.9rem;" />
                <button type="button" onclick="applyFilters()" class="btn btn-primary shadow-sm mb-2"
                    style="font-size: 0.9rem; border-radius: 5px;">
                    Search
                </button>
            </div>
            <table class="table table-striped table-bordered table-hover w-100">
                <thead style="background-color: yellow;">
                    <tr style="font-size: 0.9rem !important;">
                        <th scope="col">ID</th>
                        <th scope="col">S. NAME</th>
                        <th scope="col">GUARDIAN</th>
                        <th scope="col">CONTACT NO.</th>
                        <th scope="col">EMAIL</th>
                        <th scope="col">SOURCE</th>
                        <th scope="col">STATUS</th>
                        <th scope="col">R.STATUS</th>
                        <th scope="col">DATE</th>
                        <th scope="col">ACTIONS</th>
                    </tr>
                </thead>
                <tbody id="inquiry-table-body">
                    @if (Model == null || !Model.Inquiries.Any())
                    {
                        <tr>
                            <td colspan="11" class="text-center text-muted">
                                No inquiries data available.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var inquiry in Model.Inquiries)
                        {
                            <tr>
                                <td>@inquiry.InquiryId</td>
                                <td>@inquiry.StudentName</td>
                                <td>@inquiry.GuardianName</td>
                                <td>@inquiry.ContactNumber</td>
                                <td>@inquiry.EmailAddress</td>
                                <td>@inquiry.SourceOfInformation</td>
                                <td>
                                    @if (inquiry.IsApproved)
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else if (inquiry.IsRejected)
                                    {
                                        <span class="badge bg-danger">Rejected</span>
                                    }
                                    else if (inquiry.IsCancelled)
                                    {
                                        <span class="badge bg-secondary">Cancelled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                </td>
                                <td>
                                    @if (inquiry.IsConfirmed)
                                    {
                                        <span class="badge bg-success">Confirmed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">------</span>
                                    }
                                </td>
                                <td>@inquiry.DateCreated.ToString("MMMM dd, yyyy")</td>
                                <td>
                                    <button class="btn btn-info btn-sm view-details" data-bs-toggle="modal"
                                        data-bs-target="#detailsModal-@inquiry.InquiryId">
                                        <i class="bi bi-info-circle"></i> Details
                                    </button>

                                    @if (!inquiry.IsApproved && !inquiry.IsRejected && !inquiry.IsCancelled)
                                    {
                                        <button class="btn btn-warning btn-sm" data-bs-toggle="modal"
                                            data-bs-target="#sendNoteModal-@inquiry.InquiryId">
                                            <i class="bi bi-pencil"></i> Send Note
                                        </button>

                                        <button class="btn btn-success btn-sm" data-bs-toggle="modal"
                                            data-bs-target="#approveModal-@inquiry.InquiryId">
                                            <i class="bi bi-check-circle"></i> Approve
                                        </button>

                                        <button class="btn btn-danger btn-sm" data-bs-toggle="modal"
                                            data-bs-target="#rejectModal-@inquiry.InquiryId">
                                            <i class="bi bi-x-circle"></i> Reject
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-success btn-sm" data-bs-toggle="modal"
                                            data-bs-target="#editModal-@inquiry.InquiryId">
                                            <i class="bi bi-check-circle"></i> Edit
                                        </button>

                                        <button class="btn btn-danger btn-sm" data-bs-toggle="modal"
                                            data-bs-target="#deleteModal-@inquiry.InquiryId">
                                            <i class="bi bi-x-circle"></i> Delete
                                        </button>
                                    }
                                </td>
                            </tr>

                            <div class="modal fade" id="detailsModal-@inquiry.InquiryId" tabindex="-1"
                                aria-labelledby="detailsModal-@inquiry.InquiryId-Label" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="detailsModal-@inquiry.InquiryId-Label">Inquiry
                                                Details</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="container">
                                                <div class="row mb-2">
                                                    <div class="col-sm-4"><strong>Inquiry ID:</strong></div>
                                                    <div class="col-sm-8">@inquiry.InquiryId</div>
                                                </div>
                                                <div class="row mb-2">
                                                    <div class="col-sm-4"><strong>Student Name:</strong></div>
                                                    <div class="col-sm-8">@inquiry.StudentName</div>
                                                </div>
                                                <div class="row mb-2">
                                                    <div class="col-sm-4"><strong>Guardian Name:</strong></div>
                                                    <div class="col-sm-8">@inquiry.GuardianName</div>
                                                </div>
                                                <div class="row mb-2">
                                                    <div class="col-sm-4"><strong>Contact Number:</strong></div>
                                                    <div class="col-sm-8">@inquiry.ContactNumber</div>
                                                </div>
                                                <div class="row mb-2">
                                                    <div class="col-sm-4"><strong>Email Address:</strong></div>
                                                    <div class="col-sm-8">@inquiry.EmailAddress</div>
                                                </div>
                                                <div class="row mb-2">
                                                    <div class="col-sm-4"><strong>Source of Information:</strong></div>
                                                    <div class="col-sm-8">@inquiry.SourceOfInformation</div>
                                                </div>
                                                <div class="row mb-2">
                                                    <div class="col-sm-4"><strong>Additional Notes:</strong></div>
                                                    <div class="col-sm-8">@inquiry.Notes</div>
                                                </div>
                                                <div class="row mb-2">
                                                    <div class="col-sm-4"><strong>Date Created:</strong></div>
                                                    <div class="col-sm-8">@inquiry.DateCreated.ToString("MMMM dd, yyyy")
                                                    </div>
                                                </div>
                                                <div class="row mb-2">
                                                    <div class="col-sm-4"><strong>Status:</strong></div>
                                                    <div class="col-sm-8">
                                                        @if (inquiry.IsCancelled)
                                                        {
                                                            <span class="badge bg-secondary">Cancelled</span>
                                                        }
                                                        else if (inquiry.IsApproved)
                                                        {
                                                            <span class="badge bg-success">Approved</span>
                                                        }
                                                        else if (inquiry.IsRejected)
                                                        {
                                                            <span class="badge bg-danger">Rejected</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-warning">Pending</span>
                                                        }
                                                    </div>
                                                </div>
                                                @if (inquiry.IsCancelled)
                                                {
                                                    <hr>
                                                    <div class="row mb-2">
                                                        <div class="col-sm-4"><strong>Cancellation Reason:</strong></div>
                                                        <div class="col-sm-8">
                                                            <span>@inquiry.CancellationReason</span>
                                                        </div>
                                                        <div class="col-sm-4"><strong>Cancellation Notes</strong></div>
                                                        <div class="col-sm-8">
                                                            <span>@inquiry.CancellationNotes</span>
                                                        </div>
                                                    </div>
                                                }

                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade" id="editModal-@inquiry.InquiryId" tabindex="-1"
                                aria-labelledby="editModalLabel-@inquiry.InquiryId" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="editModalLabel-@inquiry.InquiryId">Edit Inquiry</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form asp-controller="Inquiry"   asp-action="EditInquiry" method="post">
                                                <input type="hidden" name="InquiryId" value="@inquiry.InquiryId" />

                                                <!-- Student Name -->
                                                <div class="mb-3">
                                                    <label for="StudentName-@inquiry.InquiryId" class="form-label">Student
                                                        Name</label>
                                                    <input type="text" class="form-control" id="StudentName-@inquiry.InquiryId"
                                                        name="StudentName" value="@inquiry.StudentName" required />
                                                </div>

                                                <!-- Guardian Name -->
                                                <div class="mb-3">
                                                    <label for="GuardianName-@inquiry.InquiryId" class="form-label">Guardian
                                                        Name</label>
                                                    <input type="text" class="form-control" id="GuardianName-@inquiry.InquiryId"
                                                        name="GuardianName" value="@inquiry.GuardianName" required />
                                                </div>

                                                <!-- Contact Number -->
                                                <div class="mb-3">
                                                    <label for="ContactNumber-@inquiry.InquiryId" class="form-label">Contact
                                                        Number</label>
                                                    <input type="text" class="form-control"
                                                        id="ContactNumber-@inquiry.InquiryId" name="ContactNumber"
                                                        value="@inquiry.ContactNumber" required />
                                                </div>

                                                <!-- Source of Information -->
                                                <div class="mb-3">
                                                    <label for="SourceOfInformation-@inquiry.InquiryId"
                                                        class="form-label">Source of Information</label>
                                                    <input type="text" class="form-control"
                                                        id="SourceOfInformation-@inquiry.InquiryId" name="SourceOfInformation"
                                                        value="@inquiry.SourceOfInformation" />
                                                </div>

                                                <!-- Notes -->
                                                <div class="mb-3">
                                                    <label for="Notes-@inquiry.InquiryId" class="form-label">Notes</label>
                                                    <textarea class="form-control" id="Notes-@inquiry.InquiryId" name="Notes"
                                                        rows="3">@inquiry.Notes</textarea>
                                                </div>

                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="modal fade" id="sendNoteModal-@inquiry.InquiryId" tabindex="-1"
                                aria-labelledby="sendNoteModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form asp-action="SendNote" asp-route-id="@inquiry.InquiryId" method="post">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="sendNoteModalLabel">Send Note</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label for="noteContent-@inquiry.InquiryId" class="form-label">Note
                                                        Content</label>
                                                    <textarea id="noteContent-@inquiry.InquiryId" name="NoteContent"
                                                        class="form-control" rows="4" required></textarea>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Action</label>
                                                    <div>
                                                        <input type="radio" id="actionNone-@inquiry.InquiryId" name="Action"
                                                            value="None" checked />
                                                        <label for="actionNone-@inquiry.InquiryId">None</label>
                                                    </div>
                                                    <div>
                                                        <input type="radio" id="actionVerify-@inquiry.InquiryId" name="Action"
                                                            value="Verify" />
                                                        <label for="actionVerify-@inquiry.InquiryId">Verify Inquiry</label>
                                                    </div>
                                                    <div>
                                                        <input type="radio" id="actionReject-@inquiry.InquiryId" name="Action"
                                                            value="Reject" />
                                                        <label for="actionReject-@inquiry.InquiryId">Reject Inquiry</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-primary">Send Note</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>


                            <div class="modal fade" id="approveModal-@inquiry.InquiryId" tabindex="-1"
                                aria-labelledby="approveModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form asp-action="ApproveInquiry" asp-route-id="@inquiry.InquiryId" method="post">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="approveModalLabel">Confirm Approval</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to approve this inquiry?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-success">Approve</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade" id="rejectModal-@inquiry.InquiryId" tabindex="-1"
                                aria-labelledby="rejectModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form asp-action="RejectInquiry" asp-route-id="@inquiry.InquiryId" method="post">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="rejectModalLabel">Confirm Rejection</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to reject this inquiry?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Reject</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade" id="deleteModal-@inquiry.InquiryId" tabindex="-1"
                                aria-labelledby="deleteModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form asp-action="DeleteInquiry" asp-controller="Inquiry" asp-route-id="@inquiry.InquiryId" method="post">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to delete this inquiry?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-center mt-3">
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link"
                            href="@Url.Action("ManageInquiries", new { page = Model.CurrentPage - 1, search = Model.SearchFilter, status = Model.StatusFilter, rstatus = Model.RStatusFilter })">Previous</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link"
                            href="@Url.Action("ManageInquiries", new { page = Model.CurrentPage + 1, search = Model.SearchFilter, status = Model.StatusFilter, rstatus = Model.RStatusFilter })">Next</a>
                    </li>
                </ul>
            </div>

        </div>

    </div>
</div>

<script>
    function applyFilters() {
        const search = document.getElementById("searchInput").value;
    @* const grade = document.getElementById("grade-level-filter").value; *@
        const status = document.getElementById("status-filter").value;
        const rstatus = document.getElementById("rstatus-filter").value;
        window.location.href = `@Url.Action("ManageInquiries", "Admin")?search=${search}&page=1&status=${status}&rstatus=${rstatus}`;
    }
</script>
